@page "{id:int}"
@model BankManagementSystem.Pages.Account.DetailsModel
@{
    ViewData["Title"] = "Account Details";
}

<div class="container mx-auto px-4 py-8">
    <div class="bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Account Details</h2>
        
        @if (Model.Account != null)
        {
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <p class="text-gray-600 mb-2">Account Number</p>
                    <p class="text-xl font-semibold text-gray-900 mb-4">@Model.Account.AccountNumber</p>
                    
                    <p class="text-gray-600 mb-2">Account Type</p>
                    <p class="text-xl font-semibold text-gray-900 mb-4">@Model.Account.AccountType</p>
                    
                    <p class="text-gray-600 mb-2">Current Balance</p>
                    <p class="text-xl font-semibold text-gray-900 mb-4">â‚¹@Model.Account.Balance.ToString("N2")</p>
                </div>
                
                <div>
                    <p class="text-gray-600 mb-2">Account Status</p>
                    <p class="text-xl font-semibold text-gray-900 mb-4">@Model.Account.Status</p>
                    
                    <p class="text-gray-600 mb-2">Opening Date</p>
                    <p class="text-xl font-semibold text-gray-900 mb-4">@Model.Account.OpenDate.ToString("dd MMM yyyy")</p>
                    
                    <p class="text-gray-600 mb-2">Account Holder</p>
                    <p class="text-xl font-semibold text-gray-900 mb-4">@Model.Account.User?.Email</p>
                </div>
            </div>

            <div class="mt-8 flex justify-end space-x-4">
                <a href="/Account/Transactions" class="bg-indigo-600 text-white px-6 py-2 rounded-lg hover:bg-indigo-700">
                    Make a Transfer
                </a>
                <a href="/Account/Dashboard" class="bg-gray-200 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-300">
                    Back to Dashboard
                </a>
            </div>
        }
        else
        {
            <p class="text-gray-600">Account not found.</p>
            <div class="mt-4">
                <a href="/Account/Dashboard" class="text-indigo-600 hover:text-indigo-900">Back to Dashboard</a>
            </div>
        }
    </div>
</div> 