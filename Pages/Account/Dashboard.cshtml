@page
@model BankManagementSystem.Pages.Account.DashboardModel
@{
    ViewData["Title"] = "Account Dashboard";
}

<div class="container mx-auto px-4 py-8">
    <div class="bg-gradient-to-r from-indigo-600 to-indigo-800 rounded-lg shadow-lg p-6 mb-8">
        <h1 class="text-3xl font-bold text-white mb-4">Account Dashboard</h1>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-white bg-opacity-20 rounded-lg p-4">
                <h3 class="text-lg font-semibold text-white mb-2">Total Accounts</h3>
                <p class="text-2xl text-white">@Model.UserAccounts.Count</p>
            </div>
            <div class="bg-white bg-opacity-20 rounded-lg p-4">
                <h3 class="text-lg font-semibold text-white mb-2">Total Balance</h3>
                <p class="text-2xl text-white">₹@Model.UserAccounts.Sum(a => a.Balance).ToString("N2")</p>
            </div>
            <div class="bg-white bg-opacity-20 rounded-lg p-4">
                <h3 class="text-lg font-semibold text-white mb-2">Active Accounts</h3>
                <p class="text-2xl text-white">@Model.UserAccounts.Count(a => a.IsActive)</p>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Your Accounts</h2>
        <div class="overflow-x-auto">
            <table class="min-w-full table-auto">
                <thead>
                    <tr class="bg-gray-100">
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Account Number</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Account Type</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Balance</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var account in Model.UserAccounts)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">@account.AccountNumber</div>
                                <div class="text-sm text-gray-500">@account.AccountHolderName</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-indigo-100 text-indigo-800">
                                    @account.AccountType
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">₹@account.Balance.ToString("N2")</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @if (account.IsActive)
                                {
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                        Active
                                    </span>
                                }
                                else
                                {
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                        Inactive
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <a href="#" class="text-indigo-600 hover:text-indigo-900 mr-4">View Details</a>
                                <a href="#" class="text-indigo-600 hover:text-indigo-900">Transfer</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div> 