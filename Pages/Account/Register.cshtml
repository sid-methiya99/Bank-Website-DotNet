@page
@model BankManagementSystem.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="min-h-screen bg-gradient-to-b from-indigo-100 to-white py-12">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="bg-gradient-to-r from-indigo-600 to-indigo-800 px-6 py-8">
            <h2 class="text-4xl font-bold text-white text-center">Create Account</h2>
            <p class="mt-2 text-xl text-indigo-200 text-center">Join our banking community today</p>
        </div>
        
        <form method="post" class="px-6 py-8">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4 text-lg" role="alert"></div>
            
            <div class="grid grid-cols-2 gap-4 mb-4">
                <div>
                    <label asp-for="Input.FirstName" class="block text-lg font-medium text-gray-700">First Name</label>
                    <input asp-for="Input.FirstName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-lg" />
                    <span asp-validation-for="Input.FirstName" class="text-base text-red-500"></span>
                </div>
                
                <div>
                    <label asp-for="Input.LastName" class="block text-lg font-medium text-gray-700">Last Name</label>
                    <input asp-for="Input.LastName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-lg" />
                    <span asp-validation-for="Input.LastName" class="text-base text-red-500"></span>
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="Input.Email" class="block text-lg font-medium text-gray-700">Email</label>
                <input asp-for="Input.Email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-lg" />
                <span asp-validation-for="Input.Email" class="text-base text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Input.Password" class="block text-lg font-medium text-gray-700">Password</label>
                <input asp-for="Input.Password" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-lg" />
                <span asp-validation-for="Input.Password" class="text-base text-red-500"></span>
            </div>

            <div class="mb-6">
                <label asp-for="Input.ConfirmPassword" class="block text-lg font-medium text-gray-700">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-lg" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-base text-red-500"></span>
            </div>

            <div>
                <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-lg font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Register
                </button>
            </div>

            <div class="mt-4 text-center">
                <p class="text-lg text-gray-600">
                    Already have an account? 
                    <a href="/Account/Login" class="font-medium text-indigo-600 hover:text-indigo-500">
                        Sign in
                    </a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 