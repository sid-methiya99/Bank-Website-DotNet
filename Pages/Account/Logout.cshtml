@page
@model BankManagementSystem.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<form method="post" class="hidden">
    @Html.AntiForgeryToken()
</form>

<div class="min-h-screen flex items-center justify-center">
    <div class="text-center">
        <h1 class="text-3xl font-bold text-gray-900 mb-4">Logging out...</h1>
        <p class="text-gray-600">Please wait while we sign you out.</p>
    </div>
</div>

@section Scripts {
    <script>
        // Submit the form as soon as the page loads
        window.onload = function() {
            document.forms[0].submit();
        };
    </script>
} 