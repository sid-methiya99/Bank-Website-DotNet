@page
@model BankManagementSystem.Pages.Account.CreateModel
@{
    ViewData["Title"] = "Open New Account";
}

<div class="bg-gradient-to-b from-indigo-100 to-white py-12">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white shadow-xl rounded-lg p-8 backdrop-blur-lg bg-white/90">
            <h2 class="text-3xl font-bold text-indigo-900 mb-8">Open New Account</h2>

            <form method="post" enctype="multipart/form-data">
                <div class="space-y-8">
                    <!-- Personal Information -->
                    <div class="bg-indigo-50 p-6 rounded-lg">
                        <h3 class="text-xl font-semibold text-indigo-900 mb-4">Personal Information</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-lg font-medium text-gray-700">Full Name</label>
                                <input type="text" asp-for="AccountForm.FullName" required
                                    class="mt-1 block w-full px-4 py-3 text-lg border border-gray-300 rounded-md">
                            </div>
                            <div>
                                <label class="block text-lg font-medium text-gray-700">Date of Birth</label>
                                <input type="date" asp-for="AccountForm.DateOfBirth" required
                                    class="mt-1 block w-full px-4 py-3 text-lg border border-gray-300 rounded-md">
                            </div>
                            <div>
                                <label class="block text-lg font-medium text-gray-700">Mobile Number</label>
                                <input type="tel" asp-for="AccountForm.MobileNumber" required pattern="[0-9]{10}"
                                    class="mt-1 block w-full px-4 py-3 text-lg border border-gray-300 rounded-md">
                            </div>
                            <div>
                                <label class="block text-lg font-medium text-gray-700">Email</label>
                                <input type="email" asp-for="AccountForm.Email" required
                                    class="mt-1 block w-full px-4 py-3 text-lg border border-gray-300 rounded-md">
                            </div>
                        </div>
                    </div>

                    <!-- Address Information -->
                    <div class="bg-blue-50 p-6 rounded-lg">
                        <h3 class="text-xl font-semibold text-indigo-900 mb-4">Address Details</h3>
                        <div class="grid grid-cols-1 gap-6">
                            <div>
                                <label class="block text-lg font-medium text-gray-700">Address Line 1</label>
                                <input type="text" asp-for="AccountForm.AddressLine1" required
                                    class="mt-1 block w-full px-4 py-3 text-lg border border-gray-300 rounded-md">
                            </div>
                            <div>
                                <label class="block text-lg font-medium text-gray-700">Address Line 2</label>
                                <input type="text" asp-for="AccountForm.AddressLine2"
                                    class="mt-1 block w-full px-4 py-3 text-lg border border-gray-300 rounded-md">
                            </div>
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                                <div>
                                    <label class="block text-lg font-medium text-gray-700">City</label>
                                    <input type="text" asp-for="AccountForm.City" required
                                        class="mt-1 block w-full px-4 py-3 text-lg border border-gray-300 rounded-md">
                                </div>
                                <div>
                                    <label class="block text-lg font-medium text-gray-700">State</label>
                                    <input type="text" asp-for="AccountForm.State" required
                                        class="mt-1 block w-full px-4 py-3 text-lg border border-gray-300 rounded-md">
                                </div>
                                <div>
                                    <label class="block text-lg font-medium text-gray-700">PIN Code</label>
                                    <input type="text" asp-for="AccountForm.PinCode" required pattern="[0-9]{6}"
                                        class="mt-1 block w-full px-4 py-3 text-lg border border-gray-300 rounded-md">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- KYC Documents -->
                    <div class="bg-purple-50 p-6 rounded-lg">
                        <h3 class="text-xl font-semibold text-indigo-900 mb-4">KYC Documents</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-lg font-medium text-gray-700">Aadhaar Number</label>
                                <input type="text" asp-for="AccountForm.AadhaarNumber" required pattern="[0-9]{12}"
                                    class="mt-1 block w-full px-4 py-3 text-lg border border-gray-300 rounded-md">
                            </div>
                            <div>
                                <label class="block text-lg font-medium text-gray-700">PAN Number</label>
                                <input type="text" asp-for="AccountForm.PanNumber" required pattern="[A-Z]{5}[0-9]{4}[A-Z]{1}"
                                    class="mt-1 block w-full px-4 py-3 text-lg border border-gray-300 rounded-md">
                            </div>
                            <div>
                                <label class="block text-lg font-medium text-gray-700">Upload Aadhaar Card</label>
                                <input type="file" asp-for="AccountForm.AadhaarFile" required accept=".pdf,.jpg,.jpeg,.png"
                                    class="mt-1 block w-full px-4 py-3 text-lg border border-gray-300 rounded-md">
                            </div>
                            <div>
                                <label class="block text-lg font-medium text-gray-700">Upload PAN Card</label>
                                <input type="file" asp-for="AccountForm.PanFile" required accept=".pdf,.jpg,.jpeg,.png"
                                    class="mt-1 block w-full px-4 py-3 text-lg border border-gray-300 rounded-md">
                            </div>
                        </div>
                    </div>

                    <!-- Account Details -->
                    <div class="bg-indigo-50 p-6 rounded-lg">
                        <h3 class="text-xl font-semibold text-indigo-900 mb-4">Account Details</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-lg font-medium text-gray-700">Account Type</label>
                                <select asp-for="AccountForm.AccountType" required
                                    class="mt-1 block w-full px-4 py-3 text-lg border border-gray-300 rounded-md">
                                    <option value="">Select Account Type</option>
                                    <option value="Savings">Savings Account</option>
                                    <option value="Current">Current Account</option>
                                    <option value="Fixed">Fixed Deposit</option>
                                </select>
                            </div>
                            <div>
                                <label class="block text-lg font-medium text-gray-700">Initial Deposit Amount (â‚¹)</label>
                                <input type="number" asp-for="AccountForm.InitialDeposit" required min="1000"
                                    class="mt-1 block w-full px-4 py-3 text-lg border border-gray-300 rounded-md">
                            </div>
                        </div>
                    </div>

                    <div class="flex items-center space-x-4 pt-6">
                        <button type="submit"
                            class="px-8 py-4 text-xl font-medium text-white bg-gradient-to-r from-indigo-600 to-indigo-700 rounded-md hover:from-indigo-700 hover:to-indigo-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 shadow-lg transform transition hover:-translate-y-0.5">
                            Submit Application
                        </button>
                        <a href="/" 
                           class="px-8 py-4 text-xl font-medium text-gray-700 bg-gradient-to-r from-gray-100 to-gray-200 rounded-md hover:from-gray-200 hover:to-gray-300 shadow-lg transform transition hover:-translate-y-0.5">
                            Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div> 