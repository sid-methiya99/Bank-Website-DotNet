@using Microsoft.AspNetCore.Identity
@inject SignInManager<BankManagementSystem.Models.ApplicationUser> SignInManager
@inject UserManager<BankManagementSystem.Models.ApplicationUser> UserManager

<div class="bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-end h-16 items-center">
            @if (SignInManager.IsSignedIn(User))
            {
                <div class="flex items-center space-x-4">
                    <span class="text-gray-900">Hello, @(User.Identity?.Name ?? "User")!</span>
                    <form class="inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <button type="submit" class="text-gray-700 hover:text-indigo-600">Logout</button>
                    </form>
                </div>
            }
            else
            {
                <div class="space-x-4">
                    <a class="text-gray-700 hover:text-indigo-600" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    <a class="text-gray-700 hover:text-indigo-600" asp-area="Identity" asp-page="/Account/Register">Register</a>
                </div>
            }
        </div>
    </div>
</div> 